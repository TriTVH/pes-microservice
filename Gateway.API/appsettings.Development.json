{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Jwt": {
    "Key": "ThisIsMyUltraSuperSecretKey1234567890",
    "Issuer": "AuthService",
    "Audience": "PesApp"
  },

  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "auth-swagger-proxy": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/swagger/proxy/spec/auth" },
        "Transforms": [ { "PathPattern": "/swagger/v1/swagger.json" } ]
      },
      "class-swagger-proxy": {
        "ClusterId": "class-cluster",
        "Match": { "Path": "/swagger/proxy/spec/class" },
        "Transforms": [ { "PathPattern": "/swagger/v1/swagger.json" } ]
      },
      "parent-swagger-proxy": {
        "ClusterId": "parent-cluster",
        "Match": { "Path": "/swagger/proxy/spec/parent" },
        "Transforms": [ { "PathPattern": "/swagger/v1/swagger.json" } ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth-api/api/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ]
      },
      "class-route": {
        "ClusterId": "class-cluster",
        "Match": { "Path": "/class-api/api/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
        "AuthorizationPolicy": "EducationAuth"
      },
      "class-public-route": {
        "ClusterId": "class-cluster",
        "Match": { "Path": "/class-api/api/classes/public/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/classes/public/{**catch-all}" } ],
        "AuthorizationPolicy": "ParentAndEducationAuth"
      },
      "admission-term-public-route": {
        "ClusterId": "class-cluster",
        "Match": { "Path": "/class-api/api/term/active" },
        "Transforms": [ { "PathPattern": "/api/term/active" } ]
      },
      "admission-term-common-route": {
        "ClusterId": "class-cluster",
        "Match": { "Path": "/class-api/api/term/common/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/term/common/{**catch-all}" } ],
        "AuthorizationPolicy": "ParentAndEducationAuth"
      },
      "activity-common-route": {
        "ClusterId": "class-cluster",
        "Match": { "Path": "/class-api/api/activity/common/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/activity/common/{**catch-all}" } ],
        "AuthorizationPolicy": "ParentAndEducationAuth"
      },
      "student-public-route": {
        "ClusterId": "parent-cluster",
        "Match": { "Path": "/parent-api/api/student/public/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/student/public/{**catch-all}" } ],
        "AuthorizationPolicy": "ParentAndEducationAuth"
      },
      "parent-route": {
        "ClusterId": "parent-cluster",
        "Match": { "Path": "/parent-api/api/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
        "AuthorizationPolicy": "ParentAuth"
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "d1": { "Address": "http://authservice.api:5022" }
        }
      },
      "class-cluster": {
        "Destinations": {
          "d1": { "Address": "http://syllabusservice.api:8082" }
        }
      },
      "parent-cluster": {
        "Destinations": {
          "d1": { "Address": "http://parentservice.api:8083" }
        }
      }
    }
  }
}


