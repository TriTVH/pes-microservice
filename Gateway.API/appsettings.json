{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Jwt": {
    "Key": "ThisIsMyUltraSuperSecretKey1234567890",
    "Issuer": "AuthService",
    "Audience": "PesApp"
  },

  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "terms-swagger-proxy": {
        "ClusterId": "terms-cluster",
        "Match": { "Path": "/swagger/proxy/spec/terms" },
        "Transforms": [ { "PathPattern": "/swagger/v1/swagger.json" } ]
      },
      "auth-swagger-proxy": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/swagger/proxy/spec/auth" },
        "Transforms": [ { "PathPattern": "/swagger/v1/swagger.json" } ]
      },
      "syllabus-swagger-proxy": {
        "ClusterId": "syllabus-cluster",
        "Match": { "Path": "/swagger/proxy/spec/syllabus" },
        "Transforms": [ { "PathPattern": "/swagger/v1/swagger.json" } ]
      },
      "terms-route": {
        "ClusterId": "terms-cluster",
        "Match": { "Path": "/terms-api/api/term/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/api/term/{**catch-all}" }
        ],
        "AuthorizationPolicy": "EducationAuth"
      },

      "forms-route": {
        "ClusterId": "terms-cluster",
        "Match": { "Path": "/terms-api/api/form/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/api/form/{**catch-all}" }
        ],
        "AuthorizationPolicy": "EducationAuth"
      },
      "form-parent-routes": {
        "ClusterId": "terms-cluster",
        "Match": { "Path": "/terms-api/api/form/parent/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/api/form/parent/{**catch-all}" }
        ],
        "AuthorizationPolicy": "ParentAuth"
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/auth-api/api/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ]
      },
      "syllabus-route": {
        "ClusterId": "syllabus-cluster",
        "Match": { "Path": "/syllabus-api/api/{**catch-all}" },
        "Transforms": [ { "PathPattern": "/api/{**catch-all}" } ],
        "AuthorizationPolicy": "EducationAuth"
      }
    },

    "Clusters": {
      "terms-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://localhost:8080"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5022" }
        }
      },
      "syllabus-cluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:8082" }
        }
      }
    }
  }
}


